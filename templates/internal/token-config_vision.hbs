<div class="form-group">
    <label>{{localize "TOKEN.VisionLowLight"}}:</label>
    <input type="checkbox" name="flags.clff20.lowLightVision" data-dtype="Boolean" {{checked object.flags.clff20.lowLightVision}}/>
</div>

<div class="form-group">
    <label>{{localize "TOKEN.VisionLowLightMultiplier"}}</label>
    <input type="number" name="flags.clff20.lowLightVisionMultiplier" data-dtype="Number" placeholder="2" title="{{localize "clff20.Dim"}}" value="{{object.flags.clff20.lowLightVisionMultiplier}}"/>
    <input type="number" name="flags.clff20.lowLightVisionMultiplierBright" data-dtype="Number" placeholder="2" title="{{localize "clff20.Bright"}}" value="{{object.flags.clff20.lowLightVisionMultiplierBright}}"/>
</div>
