<form class="flexcol" autocomplete="off">
  <div class="content">
    <div class="item-list">
      {{#each items as |item|}}
      <a class="item{{#if item.selected}} selected{{/if}}" data-key="{{item.key}}"{{#if item.tooltip}} title="{{item.tooltip}}"{{/if}}>
        <div class="image" style="background-image: url({{item.img}});">
          {{#if item.selected}}
          <img class="check-mark" src="{{../checkImage}}"/>
          {{/if}}
        </div>
      </a>
      {{/each}}
    </div>

    {{#each extraHeaders as |header headerKey|}}
    <div class="form-group stacked">
      <label>{{header.label}}</label>
      <div class="item-list" data-header="{{headerKey}}">
      {{#each header.items as |item|}}
      <a class="item{{#if item.selected}} selected{{/if}}" data-key="{{item.key}}" title="{{item.name}}">
        <div class="image" style="background-image: url({{item.img}});">
          {{#if item.selected}}
          <img class="check-mark" src="{{../../checkImage}}"/>
          {{/if}}
        </div>
      </a>
      {{/each}}
      </div>
    </div>
    {{/each}}
  </div>

  {{#if useLogicalOperator}}
  <div class="switch" data-name="logicalOperator">
    <span class="{{#if data.logicalOperator}}active{{/if}}">{{localize "PF1.Operators.And"}}</span>
    <span class="{{#unless data.logicalOperator}}active{{/unless}}">{{localize "PF1.Operators.Or"}}</span>
  </div>
  {{/if}}

  {{#if useDamageRule}}
  <div class="form-group stacked" data-name="rule">
    <label>{{localize "PF1.DamageRules"}}</label>
    {{radioBoxes "rule" config.damageRules checked=data.rule localize=true}}
  </div>
  {{/if}}

  {{#if useValueField}}
  <div class="form-group">
    <label>{{localize "PF1.Value"}}</label>
    <div class="form-fields">
      <input type="text" name="value" value="{{data.value}}" placeholder="{{localize "PF1.Formula"}}"/>
    </div>
  </div>
  {{/if}}

  {{#if customOptionsHTML}}
  {{{customOptionsHTML}}}
  {{/if}}

  <div class="form-group">
    {{!-- Submit --}}
    <button type="submit" name="submit"><i class="far fa-save"></i> {{localize "PF1.Submit"}}</button>
  </div>
</form>